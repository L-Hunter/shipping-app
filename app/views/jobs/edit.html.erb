<h2>Edit This Job</h2>


<div>
	<%= form_for @job do |f| %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<div class="field">
			<%= f.label :name, value: "Name: " %><br />
			<%= f.text_field :name %>
		</div>
		
		<div class="field">
		<% cities = ["Gulltown", "King's Landing", "Lannisport", "Oldtown", "Pyke", "Seagard", "Sunspear", "White Harbor"] %>
			<%= f.label :origin, value: "Origin: " %><br />
			<%= f.select(:origin, options_for_select(cities)) %>
	    
	    <div class="field">	
	    	<%= f.label :destination, value: "Destination: " %><br />
	    	<%= f.select(:destination, options_for_select(cities)) %>
		</div>

		<div class="field">
			<%= f.label :description, value: "Description: " %><br />
			<%= f.text_field :description, :minlength=>"50"%>
		</div>

		<div class="field">
			<%= f.label :cost, value: "Cost: " %><br />
			<%= f.text_field :cost %>
		</div>
		
		<div class="field">
			<%= f.label :containers, value: "Containers: " %><br />
			<%= f.text_field :containers %>
		</div>

		<div class="actions">
			<%= f.submit "Update" %>
		</div>

	<% end %> 
</div>

<!-- Ability to delete -->
<div>
	<p><%= link_to "Delete This Job", @job, method: :delete, data: { confirm: "Are you sure you want to delete this job?" } %> </p>
</div>