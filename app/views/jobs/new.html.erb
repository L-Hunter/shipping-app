<%= form_for Job.new do |f| %>
		<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.label :destination %> 
		<%= f.text_field :destination %>
	<%= f.label :description %>
		<%= f.text_field :description %>
	<%= f.label :origin %>
		<%= f.text_field :origin %>
	<%= f.label :cost %>
		<%= f.text_field :cost %>
	<%= f.label :containers %>
		<%= f.text_field :containers %>

	<%= f.submit "Submit" %>

<% end %>