<h2>Edit <%= @boat.name %></h2>

<!-- Edit Boat -->
<%= form_for @boat do |f| %>
	<div class="field">
    	<%= f.label :name %><br />
    	<%= f.text_field :name, autofocus: true %>
  	</div>

	<div class="field">
	  <%= f.label :containers %><br />
	  <%= f.text_field :containers, autofocus: true %>
	</div>

	<div class="field">
	  	<% cities = ["Gulltown", "King's Landing", "Lannisport", "Oldtown", "Pyke", "Seagard", "Sunspear", "White Harbor"] %>
		<div><%= f.label :location, value: "Location: " %></div>
		<div><%= f.select(:location, options_for_select(cities)) %></div>
	</div>

	<div class="field">
	  <%= f.label :avatar %>
	  <%= f.file_field :avatar %><br />
	</div>

	<div class="actions">
    	<%= f.submit "Update" %>
  	</div>
<% end %>

<!-- Delete boat -->
<div>
	<p><%= link_to "Delete Boat", @boat, method: :delete, data: { confirm: "Are you sure you want to delete this boat??" } %> </p>
</div>
