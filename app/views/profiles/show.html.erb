<div class="container-fluid">

	<div class="row">
		<div class="col-md-12">
			<div class="text-bg">

			<h1><%= current_user.full_name %> 's Profile</h1>

			<button class="btn"><a href=<%= '/users/edit' %>>Edit Your Profile</a></button>


			<% if current_user %>

				<h2>User Information:</h2>
				<%= current_user.full_name %>
				<%= current_user.email %>
				<%= current_user.id %>
				<% @jobs.each do |job|  %>
					<% if current_user.id == job.user_id %>
						<div>
							<h3>Job Number: <%= job.id %></h3> 
							<%= job.destination %>
							<%= job.origin %>
							<%= job.cost %>
							<%= job.description %>
							<%= job.containers %>
							<a href='/jobs/<%= "#{job.id}" %>'>Go to This Job</a>
						</div>
					<% end %>

				<% end %>
		</div>
				

			<% end %>

			<% if !current_user %>

				<p>You're not logged in </p>

			<% end %>
		</div>


	</div>

</div>



